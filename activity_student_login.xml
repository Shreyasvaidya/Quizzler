<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#6F137E"
    >

    <TextView
        android:id="@+id/logStudTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Login"
        android:textColor="#FAF9F9"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/stud_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#FFFFFF"
        android:inputType="textEmailAddress"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/stud_login_psswd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logStudTitle" />

    <EditText
        android:id="@+id/stud_login_psswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"

        android:layout_marginBottom="50dp"
        android:backgroundTint="#FFFFFF"
        android:hint="@string/psswd"
        android:inputType="textPassword"
        android:text="@string/psswd"

        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/stud_login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stud_login_email" />

    <Button
        android:id="@+id/stud_login_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="50dp"
        android:shadowColor="#007eec"

        android:text="Login"
        android:textAllCaps="false"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/OrText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stud_login_psswd" />

    <TextView
        android:id="@+id/OrText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:text="OR"
        android:textColor="#FFFFFF"
        android:textSize="40sp"

        app:layout_constraintBottom_toTopOf="@+id/student_g_sign_in_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stud_login_button" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/student_g_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="200dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>