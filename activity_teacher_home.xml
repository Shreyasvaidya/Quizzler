<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_home"
    android:background="#FFF3FF">

    <TextView
        android:id="@+id/Teacher_home_title"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#6C137E"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/csv"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="40dp"
        android:background="#FFFFFF"
        android:text="Csv File Text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Teacher_home_title" />

    <Button
        android:id="@+id/Add_quiz_button"
        android:layout_width="240dp"

        android:layout_marginHorizontal="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:text="Upload_Quiz"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/csv" />

</androidx.constraintlayout.widget.ConstraintLayout>